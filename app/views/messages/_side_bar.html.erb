<div class="side-header">
  <div class="header-name">
    <%= link_to current_user.name, edit_user_path(current_user)%>
  </div>
  <div class="create-chat">
    <%= link_to 'チャットを作成する', new_room_path %>
  </div>
</div>

<div class="side-chat">
  <div class="room-name">
    <div class="room">
        <% current_user.rooms.each do |r| %>
          <div class="room">
            <div class="room-name">
              <%= link_to  r.name, room_messages_path(r) %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>