<div class="chat-header">
  <div class="left-header">
    <div class="group-name">
      <%= @room.name %>
    </div>
  </div>
  <div class="right-header">
    <div class="chat-finish">
      <%= link_to "チャットを終了する", room_path(@room), method: :delete %>
    </div>
  </div>
</div>

<div class="chat-center">
  <div class="messages">
    <div class="upper-message">
      <div class="user-name">Tom</div>
      <div class="time">2020/3/31(Wed) 12:43:30</div>
    </div>
    <div class="lower-message">
      <div class="message">おはよう</div>
    </div>
  </div>

  <div class="messages">
    <%= render partial: 'message', collection: @messages %>
  </div>
</div>

<%= form_with model: [@room, @message], class: 'chat-fooder', local:true do |f| %>
    <div class="chat-form">
      <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
      <label class="form-image">
        <span class="image-file">画像</span>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
    </div>
    <%= f.submit '送信', class: 'form-submit' %>
<% end %>